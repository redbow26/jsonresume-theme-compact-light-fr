{{#if resume.work.length}}

<section id="work">
	<h2>Experiences</h2>
	{{#each resume.work}}
	<div class="item">
		<div class="details">
			{{#if name}}
			<h3 class="company">
				{{name}}
			</h3>
			{{/if}}
			<div class="date">
				{{#if startDateYear}}
				<span class="startDate">
					{{startDateMonth}}{{startDateYear}}
				</span>
				{{/if}}
				{{#if endDateYear}}
				<span class="endDate">
					- {{endDateMonth}}{{endDateYear}}
				</span>
				{{/if}}
			</div>
		</div>
		<div class="content">
			{{#if position}}
			<div class="position">
				<em>{{position}}</em>
			</div>
			{{/if}}
			{{#if website}}
			<div class="website">
				<a href="{{website}}">{{website}}</a>
			</div>
			{{/if}}
			{{#if summary}}
			<div class="summary">
				<p>{{summary}}</p>
			</div>
			{{/if}}
			{{#if highlights.length}}
			<ul class="highlights">
				{{#each highlights}}
				<li class="list-group-item">{{{.}}}</li>
				{{/each}}
			</ul>
			{{/if}}
		</div>
	</div>
	{{/each}}
</section>
{{/if}}